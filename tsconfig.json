{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./lib",
        "downlevelIteration": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./test/**/*"]
}
